<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RK Shapes -->
    <declare-styleable name="ShapeView">
        <attr name="shape_clip_drawable" format="reference" />
    </declare-styleable>

    <!-- arc view shape  -->
    <declare-styleable name="ArcView">
        <attr name="shape_arc_height" format="dimension" />
        <attr name="shape_arc_position" format="enum">
            <enum name="bottom" value="1" />
            <enum name="top" value="2" />
            <enum name="left" value="3" />
            <enum name="right" value="4" />
        </attr>
    </declare-styleable>

    <!-- circle view shape  -->
    <declare-styleable name="CircleView">
        <attr name="shape_circle_borderWidth" format="dimension" />
        <attr name="shape_circle_borderColor" format="color" />
    </declare-styleable>

    <!-- Diagonal view shape  -->
    <declare-styleable name="DiagonalView">
        <attr name="shape_diagonal_angle" format="float" />
        <attr name="shape_diagonal_position" format="enum">
            <enum name="bottom" value="1" />
            <enum name="top" value="2" />
            <enum name="left" value="3" />
            <enum name="right" value="4" />
        </attr>
    </declare-styleable>

    <!-- Round Corner view shape  -->
    <declare-styleable name="RoundCornerView">
        <attr name="shape_roundCorner_topLeftRadius" format="dimension"/>
        <attr name="shape_roundCorner_topRightRadius" format="dimension"/>
        <attr name="shape_roundCorner_bottomLeftRadius" format="dimension"/>
        <attr name="shape_roundCorner_bottomRightRadius" format="dimension"/>
        <attr name="shape_roundCorner_borderWidth" format="dimension"/>
        <attr name="shape_roundCorner_borderColor" format="color"/>
    </declare-styleable>

   <!-- Bubble view shape  -->
    <declare-styleable name="BubbleView">
        <attr name="shape_bubble_borderRadius" format="dimension"/>
        <attr name="shape_bubble_arrowHeight" format="dimension"/>
        <attr name="shape_bubble_arrowWidth" format="dimension"/>
        <attr name="shape_bubble_arrowPosition" format="enum">
            <enum name="bottom" value="1"/>
            <enum name="top" value="2"/>
            <enum name="left" value="3"/>
            <enum name="right" value="4"/>
        </attr>
        <attr name="arrow_posititon_percent" format="float"/>
    </declare-styleable>

    <!-- Star view shape  -->
    <declare-styleable name="StarView">
        <attr name="shape_star_noOfPoints" format="integer"/>
    </declare-styleable>

    <!-- Polygon view shape  -->
    <declare-styleable name="PolygonView">
        <attr name="shape_polygon_noOfSides" format="integer"/>
    </declare-styleable>
  
    <!-- dotted cut corner view shape  -->
    <declare-styleable name="DottedCutCornerView">
        <attr name="shape_dottedCutCorner_topLeftSize" format="dimension"/>
        <attr name="shape_dottedCutCorner_topRightSize" format="dimension"/>
        <attr name="shape_dottedCutCorner_bottomLeftSize" format="dimension"/>
        <attr name="shape_dottedCutCorner_bottomRightSize" format="dimension"/>
        <attr name="shape_edge_position" format="flags">
            <flag name="none" value="0"/>
            <flag name="bottom" value="1"/>
            <flag name="top" value="2"/>
            <flag name="left" value="4"/>
            <flag name="right" value="8"/>
            <flag name="all" value="15"/>
        </attr>
        <attr name="shape_dot_radius" format="dimension"/>
        <attr name="shape_dot_spacing" format="dimension"/>
    </declare-styleable>

    <!-- Like View -->
    <declare-styleable name="LikeView">
        <attr name="dots_primary_color" format="color|reference" />
        <attr name="dots_secondary_color" format="color|reference" />
        <attr name="circle_start_color" format="color|reference" />
        <attr name="circle_end_color" format="color|reference" />
        <attr name="liked" format="boolean"/>
        <attr name="anim_scale_factor" format="float"/>
    </declare-styleable>

    <!-- rating Reviews -->
    <declare-styleable name="RatingReviews">
        <attr name="style" format="enum">
            <enum name="style1" value="1" />
            <enum name="style2" value="2" />
        </attr>
        <attr name="color" format="color" />
        <attr name="rounded" format="boolean"/>
        <attr name="gradiant" format="integer" />
        <attr name="width" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="spaces" format="dimension" />
        <attr name="max_value" format="integer" />
        <attr name="show_label" format="boolean" />
        <attr name="show_raters" format="boolean" />
        <attr name="animation" format="boolean" />
    </declare-styleable>

    <!-- infinite scrollable view pager -->
    <declare-styleable name="InfiniteViewPager">
        <attr name="isInfinite" format="boolean" />
        <attr name="autoScroll" format="boolean" />
        <attr name="wrap_content" format="boolean" />
        <attr name="scrollInterval" format="integer"/>
        <attr name="viewpagerAspectRatio" format="float"/>
        <attr name="itemAspectRatio" format="float"/>
    </declare-styleable>

    <!-- Circle pager indicator -->
    <declare-styleable name="CirclePagerIndicator">
        <attr name="indicator_spacing" format="dimension"/>
    </declare-styleable>

    <!-- otp view -->
    <declare-styleable name="OtpViewTheme">
        <attr format="reference" name="rkOtpViewStyle"/>
    </declare-styleable>
    <declare-styleable name="RkOtpView">
        <attr format="integer" name="OtpItemCount"/>
        <attr format="dimension" name="OtpItemWidth"/>
        <attr format="dimension" name="OtpItemHeight"/>
        <attr format="dimension" name="OtpItemRadius"/>
        <attr format="dimension" name="OtpItemSpacing"/>
        <attr format="dimension" name="OtpLineWidth"/>
        <attr format="reference|color" name="OtpLineColor"/>
        <attr format="enum" name="OtpViewType">
            <enum name="rectangle" value="0"/>
            <enum name="line" value="1"/>
            <enum name="none" value="2"/>
        </attr>
        <attr name="android:cursorVisible"/>
        <attr name="android:textAllCaps"/>
        <attr format="dimension" name="OtpCursorWidth"/>
        <attr format="reference|color" name="OtpCursorColor"/>
        <attr name="android:itemBackground"/>
        <attr format="boolean" name="OtpHideLineWhenFilled"/>
        <attr format="boolean" name="OtpState_filled"/>
        <attr format="boolean" name="OtpRtlTextDirection"/>
        <attr format="string" name="OtpMaskingChar"/>
    </declare-styleable>
</resources>